{
  "name": "next-park-drizzle-monorepo",
  "description": "A template for creating a Next.js app with Park and Drizzle",
  "version": "0.0.0",
  "private": true,
  "keywords": [
    "next",
    "next.js",
    "park",
    "drizzle",
    "template"
  ],
  "license": "MIT",
  "author": "Jeremy Nguyen <hi@jeremy.ng> (https://jeremy.ng)",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremy-code/next-park-drizzle-template.git"
  },
  "homepage": "https://github.com/jeremy-code/next-park-drizzle-template#readme",
  "scripts": {
    "prepack": "husky",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier 'src/**/*.{js,jsx,ts,tsx,json}' --write --ignore-path .gitignore"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
