    "@repo/typescript-config": "*",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "dependenciesMeta": {
    "@ianvs/prettier-plugin-sort-imports@4.1.1": {
      "unplugged": true
    }
